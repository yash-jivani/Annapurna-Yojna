    <script>
      function showErrMsg(errEle, msg) {
        errEle.textContent = msg;
      }

      function validateAdharNumber(number) {
        const errEle = document.getElementById("adharcardErr");
        if (isNaN(+number) || number.length < 12) {
          showErrMsg(errEle, "Invalid Adhar-Number");
          return false;
        } else {
          showErrMsg(errEle, "");
          return true;
        }
      }

      function validateRationCard(cardNumber) {
        const errEle = document.getElementById("rationErr");
        if (cardNumber.length === 0 || cardNumber.length > 15) {
          showErrMsg(errEle, "invalid ration card number");
          return false;
        } else {
          showErrMsg(errEle, "");
          return true;
        }
      }

      function validateAdharName(adharName) {
        const errEle = document.getElementById("adharNameErr");
        if (!isNaN(adharName) || adharName.value == "") {
          showErrMsg(errEle, "invalid name");
          return false;
        } else {
          showErrMsg(errEle, "");
          return true;
        }
      }

      function validateTotalMember(members) {
        const errEle = document.getElementById("eighteenErr");
        if (members > 10) {
          showErrMsg(errEle, "Max limit: 10");
          return false;
        } else {
          showErrMsg(errEle, "");
          return true;
        }
      }

      function validateOccupation(occupation) {
        const errEle = document.getElementById("occupationErr");
        if (!isNaN(occupation) || occupation == "") {
          showErrMsg(errEle, "Enter valid occupation");
          return false;
        } else {
          showErrMsg(errEle, "");
          return true;
        }
      }

      function validateIncomeCertiNumber(incomeNumber) {
        const errEle = document.getElementById("incomeErr");
        if (incomeNumber === "" || incomeNumber.length !== 10) {
          showErrMsg(errEle, "Enter valid income certificate number");
          return false;
        } else {
          showErrMsg(errEle, "");
          return true;
        }
      }

      function validatePhoneNumber(phoneNumber) {
        const errEle = document.getElementById("phoneErr");
        if (
          phoneNumber === "" ||
          phoneNumber === undefined ||
          phoneNumber.length != 10 ||
          isNaN(phoneNumber)
        ) {
          showErrMsg(errEle, "Enter valid phone number");
          return false;
        } else {
          showErrMsg(errEle, "");
          return true;
        }
      }

      function validateForm() {
        // inputvalues
        const adharNumber = document.getElementById("adharCardID").value;
        const adharName = document.getElementById("adharNameInput");
        const member18Plus = document.getElementById("member18plus").value;
        const occupation = document.getElementById("occupationInput").value;
        const incomeNum = document.getElementById("incomeNumInput").value;
        const phoneNumber = document.getElementById("phoneNum").value;
        const rationCard = document.getElementById("rationCardInput").value;

        // variables
        const isAdharNumValid = validateAdharNumber(adharNumber);
        const isAdharNameValid = validateAdharName(adharName);
        const is18plusValid = validateTotalMember(member18Plus);
        const isOccupationValid = validateOccupation(occupation);
        const isRationCardValid = validateRationCard(rationCard);
        const isIncomeNoValid = validateIncomeCertiNumber(incomeNum);
        const isPhoneNoValid = validatePhoneNumber(phoneNumber);
        if (
          isAdharNumValid &&
          isAdharNameValid &&
          is18plusValid &&
          isOccupationValid &&
          // isIncomeNoValid &&
          isRationCardValid &&
          isPhoneNoValid
        ) {
          return true;
        } else {
          return false;
        }
      }
    </script>
