          <input
            style="margin-right: auto"
            type="text"
            id="rationCardInput"
            name="rationCardNumber"

            maxlength="15"
            class="border border-gray-500 text-resp rounded"
          />
          <p class="text-center ml-auto text-red-600" id="rationErr"></p>
        </div>

        <div
          class="userInfo border-b py-3 grid sm:grid-cols-2 grid-cols-1 max-w-6xl place-items-center mx-auto gap-4 px-3 text-xs md:text-base"
        >
          <h4 style="margin-left: auto" class="text-resp">પરિવારમાં કુલ સભ્ય સંખ્યા</h4>
          <input
            style="margin-right: auto"
            type="number"
            name="totalMember"

            min="0"
            max="10"
            class="border border-gray-500 text-resp rounded"
          />
